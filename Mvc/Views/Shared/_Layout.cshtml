<!doctype html>
<html lang="tr">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta http-equiv="Content-Language" content="en">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>Kucuktas Web App</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no, shrink-to-fit=no" />
    <meta name="description" content="This is an example dashboard created using build-in elements and components.">
    <meta name="msapplication-tap-highlight" content="no">
    <!--

    -->
    @await Html.PartialAsync("_LayoutCssPartial") 
</head>
<body>
    <div class="app-container app-theme-white body-tabs-shadow fixed-sidebar fixed-header fixed-footer">
        @await Html.PartialAsync("_LayoutTopMenuPartial")

        <div class="app-main">
            @await Html.PartialAsync("_LayoutSideBarPartial")
            <div class="app-main__outer">

                <div class="app-main__inner">

                    <div class="row">
                        <div class="col-md-12">
                            <div class="main-card mb-3 card">
                                <div class="card-body">
                                    @RenderBody()
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="app-wrapper-footer">
                    @await Html.PartialAsync("_LayoutFooterPartial")
                </div>
            </div>
            
        </div>
    </div>
    @await Html.PartialAsync("_LayoutJsPartial")
    @await RenderSectionAsync("scripts", required: false)
</body>
</html>
