@model Kwork.Entities.Concrete.MasrafDekont

@{
    ViewData["Title"] = "Create";
}


<div class="row">

    <form asp-action="Create" class="col-12">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <label for="" class="col-sm-4 col-form-label">İşlem Tarihi</label>
            <div class="col-sm-8">
                <input type="date" name="DekontTarihi" class="form-control-sm" id="DekontTarihi" placeholder="">
                <span asp-validation-for="DekontTarihi" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label for="" class="col-sm-4 col-form-label">Masraf Tipi</label>
            <div class="col-sm-8">
                <select name="MasrafKartID" class="form-control-sm">
                    @foreach (var item in ViewBag.MasrafKartID)
                    {
                        <option value="@item.Id">@item.MasrafAdi</option>
                    }                    
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label for="" class="col-sm-4 col-form-label">Açıklama </label>
            <div class="col-sm-8">
                <input asp-for="Aciklama" class="form-control-sm" />
                <span asp-validation-for="Aciklama" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label for="" class="col-sm-4 col-form-label">Kasa</label>
            <div class="col-sm-8">
                <select name="KasaKartID" class="form-control-sm" id="KasaKartID">
                    <option value="" selected>Kasa Seçiniz</option>
                    @foreach (var item in ViewBag.KasaKartID)
                    {
                        <option value="@item.Id" data-kasabakiye="@item.KasaBakiye">@item.KasaAdi</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label for="" class="col-sm-4 col-form-label">Miktar</label>
            <div class="col-sm-8">
                <input type="number" step=".01" autocomplete="off" name="Miktar" class="form-control-sm" id="Miktar" />
                <span asp-validation-for="Miktar" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label for="" class="col-sm-4 col-form-label">Birim </label>
            <div class="col-sm-8">
                <select name="BirimKartID" class="form-control-sm">
                    @foreach (var item in ViewBag.BirimKartID)
                    {
                        <option value="@item.Id">@item.BirimAdi</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label for="" class="col-sm-4 col-form-label">Birim Fiyat </label>
            <div class="col-sm-8">
                <input type="number" step=".01" autocomplete="off" name="BirimFiyat" class="form-control-sm" id="BirimFiyat" />
                <span asp-validation-for="BirimFiyat" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label for="" class="col-sm-4 col-form-label">Toplam Tutar </label>
            <div class="col-sm-8">
                <input type="number" step=".01" autocomplete="off" name="ToplamTutar" class="form-control-sm" id="ToplamTutar" readonly/>
                <span asp-validation-for="ToplamTutar" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label for="" class="col-sm-4 col-form-label">KDV </label>
            <div class="col-sm-8">
                <select name="KDV" class="form-control-sm" disabled>
                    <option value="1" selected>Dahil</option>
                    <option value="0">Hariç</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label for="" class="col-sm-4 col-form-label">Genel Toplam</label>
            <div class="col-sm-8">
                <input type="number" step=".01" autocomplete="off" name="GenelToplam" class="form-control-sm" id="GenelToplam" readonly />
                <span asp-validation-for="GenelToplam" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label for="" class="col-sm-4 col-form-label">Kasa Bakiye</label>
            <div class="col-sm-8">
                <input type="number" step=".01" autocomplete="off" name="KasaBakiye" class="form-control-sm" id="KasaBakiye" readonly />
                <span asp-validation-for="KasaBakiye" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-4">
                <a asp-action="Index" class="btn btn-success btn-xs">Back to List</a>
            </div>
            <div class="col-sm-8">
                <input type="submit" value="Create" class="btn btn-primary btn-block" />
            </div>
        </div>

    </form>

</div>

@section scripts{
    <script type="text/javascript" charset="utf-8">
        $(document).ready(function () {
            $('#Miktar, #BirimFiyat').keyup(function () {              
                var miktar = $('#Miktar').val().replace(/,/g, '.');
                var birimfiyat = $('#BirimFiyat').val().replace(/,/g, '.');
                var toplamtutar = miktar * birimfiyat;
                $('#ToplamTutar').val(parseFloat(toplamtutar.toString()).toFixed(2));
                $('#GenelToplam').val(parseFloat(toplamtutar.toString()).toFixed(2));

                var kbakiye = $('#KasaKartID').find(':selected').data('kasabakiye').replace(/,/g, '.');
                var kasbakiye = kbakiye - toplamtutar;
                $('#KasaBakiye').val(parseFloat(kasbakiye.toString()).toFixed(2));

            });
            $('#KasaKartID').change(function () {
                var miktar = $('#Miktar').val().replace(/,/g, '.');
                var birimfiyat = $('#BirimFiyat').val().replace(/,/g, '.');
                var toplamtutar = miktar * birimfiyat;
                $('#ToplamTutar').val(parseFloat(toplamtutar.toString()).toFixed(2));
                $('#GenelToplam').val(parseFloat(toplamtutar.toString()).toFixed(2));
                var kbakiye = $('#KasaKartID').find(':selected').data('kasabakiye').replace(/,/g, '.');
                var kasbakiye = kbakiye - toplamtutar;
                $('#KasaBakiye').val(parseFloat(kasbakiye.toString()).toFixed(2));
            });
        });
    </script>
}
